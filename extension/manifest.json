{
	"manifest_version": 2,
	"version": "4.5",
	"name": "hackerface",
	"description": "Rapportive for Hackernews.",
	"icons": { "16": "icon16.png",
	           "48": "icon48.png",
	          "128": "icon128.png" },
	"browser_action": {
		"default_icon": "icon16.png"
	},
	"permissions": [
		"https://*/*",
		"http://*/*"
	],
	"content_scripts": [
		{
			"matches": [
				"*://*.news.ycombinator.com/*",
				"*://*.news.ycombinator.org/*"
			],
			"css": ["style.css"],
			"js": ["jquery.js","script.mini.js"],
			"run_at": "document_end"
		}
	]
}